---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Crea tu currículum perfecto y prepárate para entrevistas con nuestra plataforma impulsada por IA. Genera CVs personalizados y recibe entrenamiento interactivo para entrevistas, todo en un solo lugar."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <meta property="og:image" content="/assets/images/logo.webp" />
    <meta name="twitter:image" content="/assets/images/logo.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="bg-slate-950 text-gray-100">
    <div class="max-w-4xl mx-auto p-4">
      <slot />
    </div>
  </body>
  <style is:global></style>
</html>
